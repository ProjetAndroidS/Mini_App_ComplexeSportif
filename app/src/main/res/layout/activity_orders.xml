<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="375dp"
    android:layout_height="812dp"
    android:background="#FFFFFF"
    android:clipToOutline="true"
    android:layout_margin="20dp">

    <RelativeLayout
        android:layout_width="143dp"
        android:layout_height="45dp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="24dp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/retour"
            />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="61dp"
            android:layout_marginTop="12dp"
            android:text="My Orders"
            android:textSize="17sp"
            android:textColor="#181C2E" />
    </RelativeLayout>

    <!-- Order separator and active indicator -->
    <View
        android:id="@+id/button"
        android:layout_width="375dp"
        android:layout_height="1dp"
        android:background="#CED7DF"
        android:layout_marginTop="126dp" />

    <View
        android:layout_width="146dp"
        android:layout_height="2dp"
        android:background="#FF7622"
        android:layout_marginTop="100dp"
        android:layout_marginStart="45dp" />


    <ListView
        android:id="@+id/orders_list_view"
        android:layout_width="wrap_content"
        android:layout_height="564dp"
        android:layout_below="@id/button"
        android:layout_marginTop="10dp"
        android:divider="@color/material_blue_grey_800"
        android:dividerHeight="2dp" />
</RelativeLayout>

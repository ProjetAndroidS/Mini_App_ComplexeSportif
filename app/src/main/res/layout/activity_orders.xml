<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="375dp"
    android:layout_height="812dp"
    android:background="#FFFFFF"
    android:clipToOutline="true"
    android:layout_margin="20dp">

    <RelativeLayout
        android:layout_width="143dp"
        android:layout_height="45dp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="24dp">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/retour"
            />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="61dp"
            android:layout_marginTop="12dp"
            android:text="My Orders"
            android:textSize="17sp"
            android:textColor="#181C2E" />
    </RelativeLayout>

    <!-- Order separator and active indicator -->
    <View
        android:layout_width="375dp"
        android:layout_height="1dp"
        android:background="#CED7DF"
        android:layout_marginTop="126dp" />

    <View
        android:layout_width="146dp"
        android:layout_height="2dp"
        android:background="#FF7622"
        android:layout_marginTop="100dp"
        android:layout_marginStart="45dp" />

    <!-- Order content box -->
    <RelativeLayout
        android:layout_width="327dp"
        android:layout_height="171dp"
        android:layout_marginTop="160dp"
        android:layout_marginStart="24dp"
        android:clipToOutline="true">

        <!-- Gray rounded rectangle icon -->
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="49dp"
            android:background="@drawable/tennis" />

        <!-- Divider under title -->
        <View
            android:layout_width="327dp"
            android:layout_height="1dp"
            android:background="#EEF2F6"
            android:layout_marginTop="33dp" />

        <!-- Tennis Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="Tennis"
            android:textSize="14sp"
            android:textColor="#181C2E"
            android:textStyle="bold" />

        <!-- Price and duration row -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="84dp"
            android:layout_marginStart="74dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$35.25"
                android:textSize="14sp"
                android:textColor="#181C2E"
                android:textStyle="bold" />

            <View
                android:layout_width="1dp"
                android:layout_height="16dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="03 mois"
                android:textSize="12sp"
                android:textColor="#6B6E82" />
        </LinearLayout>
    </RelativeLayout>

    <!-- Cancel Button -->
    <Button
        android:layout_width="139dp"
        android:layout_height="38dp"
        android:layout_marginTop="300dp"
        android:layout_marginStart="212dp"
        android:backgroundTint="@android:color/transparent"
        android:foregroundTint="#FF7622"
        android:text="Cancel"
        android:textColor="#FF7622"
        android:textSize="12sp"
        android:textStyle="bold" />

    <!-- Track Order Button -->
    <Button
        android:layout_width="139dp"
        android:layout_height="38dp"
        android:layout_marginTop="300dp"
        android:layout_marginStart="24dp"
        android:backgroundTint="#FF7622"
        android:text="Track Order"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:textStyle="bold" />
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Date Picker -->
        <TextView
            android:id="@+id/date_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Date"
            android:textColor="#32343e"
            android:textSize="16sp"
            android:layout_alignParentStart="true" />

        <DatePicker
            android:id="@+id/date_picker"
            android:layout_width="375dp"
            android:layout_height="370dp"
            android:layout_below="@id/date_label"
            android:layout_marginTop="2dp" />

        <!-- Client Name -->
        <TextView
            android:id="@+id/client_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Client Name"
            android:textColor="#32343e"
            android:textSize="16sp"
            android:layout_below="@id/date_picker"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/client_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your name"
            android:layout_below="@id/client_name_label"
            android:layout_marginTop="8dp"
            android:padding="12dp"
            android:background="#F0F0F0" />

        <!-- Activity Selection -->
        <TextView
            android:id="@+id/activity_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Activity"
            android:textColor="#32343e"
            android:textSize="16sp"
            android:layout_below="@id/client_name"
            android:layout_marginTop="16dp" />

        <Spinner
            android:id="@+id/activity_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_label"
            android:layout_marginTop="8dp"
            android:spinnerMode="dropdown"
            android:padding="12dp"
            android:background="#F0F0F0" />

        <!-- Reserve Button -->
        <Button
            android:id="@+id/reserve_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reserve"
            android:layout_below="@id/activity_spinner"
            android:layout_marginTop="16dp"
            android:textColor="#FFFFFF" />

        <!-- Link to Home -->
        <TextView
            android:id="@+id/back_to_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Retour Ã  l'Accueil"
            android:textColor="#007BFF"
            android:textSize="16sp"
            android:layout_below="@id/reserve_button"
            android:layout_marginTop="16dp"
            android:clickable="true"
            android:focusable="true" />

    </RelativeLayout>
</ScrollView>
